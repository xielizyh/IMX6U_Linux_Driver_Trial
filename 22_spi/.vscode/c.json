{
	// Place your snippets for c here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	"C header file": {
		"prefix": "defh",
		"body": [
			"/**",
			"  ******************************************************************************",
			"  * @file			$TM_FILENAME",
			"  * @brief			$TM_FILENAME_BASE header file",
			"  * @author			Xli",
			"  * @email			xieliyzh@163.com",
			"  * @version		1.0.0",
			"  * @date			$CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE",
			"  * @copyright		$CURRENT_YEAR, XIELI Co.,Ltd. All rights reserved",	         
			"  ******************************************************************************",
			"**/",
			"",
			"/* Define to prevent recursive inclusion -------------------------------------*/",
			"#ifndef __${1:${TM_FILENAME/(.*)\\.h$/${1:/upcase}/i}}_H_",
			"#define __$1_H_",
			"",
			"/* Includes ------------------------------------------------------------------*/",
			"",
			"#ifdef __cplusplus",
			"extern \"C\"{",
			"#endif",
			"",
			"/* Exported constants --------------------------------------------------------*/",
			"/* Exported macros -----------------------------------------------------------*/",
			"/* Exported typedef ----------------------------------------------------------*/",
			"/* Exported variables ------------------------------------------------------- */",
			"/* Exported functions ------------------------------------------------------- */",
			"",
			"#ifdef __cplusplus",
			"}",
			"#endif",
			"",
			"#endif  /* __$1_H_ */",
		],
		"description": "C header file define"
	}	

	"C source file": {
		"prefix": "defc",
		"body": [
			"/**",
			"  ******************************************************************************",
			"  * @file			$TM_FILENAME",
			"  * @brief			$TM_FILENAME_BASE function",
			"  * @author			Xli",
			"  * @email			xieliyzh@163.com",
			"  * @version		1.0.0",
			"  * @date			$CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE",
			"  * @copyright		$CURRENT_YEAR, XIELI Co.,Ltd. All rights reserved",	         
			"  ******************************************************************************",
			"**/",
			"",
			"/* Includes ------------------------------------------------------------------*/",
			"/* Private constants ---------------------------------------------------------*/",
			"/* Private macro -------------------------------------------------------------*/",
			"/* Private typedef -----------------------------------------------------------*/",
			"/* Private variables ---------------------------------------------------------*/",
			"/* Private function ----------------------------------------------------------*/",
			"",
			"$0"
		],
		"description": "C source file define"
	}	

	"C function": {
		"prefix": "deff",
		"body": [
			"/**=============================================================================",
			" * @brief           $1",
			" *",
			" * @param[in]       ${2:none}",
			" *",
			" * @return          ${3:none}",
			" *============================================================================*/",
			"$0",
		],
		"description": "C function description"
	}
	
	"Comment first style": {
		"prefix": "cmt1",
		"body": [
			"/*!< $1 */",
		],
		"description": "Comment first style "
	}	

	"Comment second style": {
		"prefix": "cmt2",
		"body": [
			"/* $1 */",
		],
		"description": "Comment second style "
	}	

	"Typedef struct": {
		"prefix": "tds",
		"body": [
			"/**",
			"* @brief $1",
			"*/",
			"typedef struct {",
			"	$3		/*!< $4 */",
			"}$2;",
		],
		"description": "Typedef struct"
	}
		
	"Typedef enum": {
		"prefix": "tde",
		"body": [
			"/**",
			"* @brief $1",
			"*/",
			"typedef enum {",
			"	$3		/*!< $4 */",
			"}$2;",
		],
		"description": "Typedef enum"		
	}	
}